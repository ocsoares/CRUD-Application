<head>
    <link rel="stylesheet" href="../css/layouts.css">
</head>

<div class="teste">
<div class="row">
  <div class="col-6">
    <h1>Usuários cadastrados</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/createuser" target="_blank" type="button" class="btn btn-primary align-self-center">+ Adicionar usuário</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Usuário</th>
      <th scope="col">Email</th>
      <th scope="col">Tipo</th>
      <th scope="col">Criado em</th>
      <th scope="col" class="text-center">Ação</th>
    </tr>
  </thead>
  <tbody>

    <% databaseUsers.forEach((databaseUsers) => {%> <!-- FORA do <tr> !! << -->
    <tr>
      <td scope="row"><%- databaseUsers.id %></td>
      <td><%- databaseUsers.username %></td>
      <td><%- databaseUsers.email %></td>
      <td><%- databaseUsers.type %></td>
      <td><%- databaseUsers.created_date %></td>
      <td class="text-center">
        <a href="/viewuser/<%- databaseUsers.id %>" type="button" id="mamao" class="btn btn-light btn-small"><i class="bi bi-eye"></i>Visualizar</a>
        <a href="/edituser/<%- databaseUsers.id %>" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Editar</a>
        <a href="/deleteuser/<%- databaseUsers.id %>" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Deletar</a>
      </td>
    </tr>
    <% });%>

  </tbody>
</table>
</div>