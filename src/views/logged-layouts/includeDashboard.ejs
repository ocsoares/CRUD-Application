<div class="teste">
<div class="row">
  <div class="col-6">
    <h1>Usuários cadastrados</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-primary align-self-center">+ Adicionar usuário</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Usuário</th>
      <th scope="col">Email</th>
      <th scope="col">Type</th>
      <th scope="col">Criado em</th>
      <th scope="col" class="text-end">Ação</th>
    </tr>
  </thead>
  <tbody>

    <!-- {{#each rows}} -->
    <% databaseUsers.forEach((databaseUsers) => {%> <!-- FORA do <tr> !! << -->
    <tr>
      <td scope="row"><%- databaseUsers.id %></td>
      <td><%- databaseUsers.username %></td>
      <td><%- databaseUsers.email %></td>
      <td><%- databaseUsers.type %></td>
      <td><%- databaseUsers.createdDate %></td>
      <td class="text-end">
        <a href="/viewuser/{{this.id}}" type="button" id="mamao" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
        <a href="/edituser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
        <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    <% });%>
    <!-- {{/each}} -->

  </tbody>
</table>
</div>